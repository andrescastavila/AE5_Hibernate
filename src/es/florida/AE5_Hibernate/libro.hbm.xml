<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="es.florida.AE5_Hibernate">
<class name="Libro" table="llibres">
<id name="id" column="id">
<generator class="increment"/>
</id>
<property name="titol" type="string" column="titol"/>
<property name="autor" type="string" column="autor"/>
<property name="any_naix" type="int" column="any_naix"/>
<property name="any_publicacion" type="int" column="any_publicacion"/>
<property name="editorial" type="string" column="editorial"/>
<property name="pagines" type="int" column="pagines"/>
</class>
</hibernate-mapping>